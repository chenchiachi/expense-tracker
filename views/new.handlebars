<form action="/records" method="POST">
  <div class="container">
    <div class="form-group row" style="color:dimgray;">
      <div class="col-8 mx-auto">
        <div class="row mb-3">
          <p class="col-form-label text-center" style="font-size: x-small;height: 50px; line-height: 50px;">
            *必填欄位</p>
          <p class=" col-10 col-form-label text-center" style="height: 50px; line-height: 50px;">請輸入你的支出</p>
        </div>
        <div class="row mb-4">
          <label for="name" class="col-form-label">名稱*：</label>
          <div class="col-10">
            <input name="name" type="text" class="form-control rounded-0" id="name" placeholder="" required>
          </div>
        </div>
        <div class="row mb-4">
          <label for="date" class="col-form-label">日期*：</label>
          <div class="col-10">
            <input name="date" type="date" class="form-control rounded-0" id="date" placeholder="" required>
          </div>
        </div>
        <div class="row mb-4">
          <label for="categoryId" class="col-form-label">類別*：</label>
          <div class="col-10">
            <select class="form-control rounded-0" name="categoryId" class="form-select rounded-0 " id="categoryId" required>
              {{{ categoryHelper category }}}
            </select>
          </div>
        </div>
        <div class="row mb-4">
          <label for="amount" class="col-form-label">金額*：</label>
          <div class="col-10">
            <input name="amount" type="number" min="0" class="form-control rounded-0 " id="amount" placeholder=""
              required>
          </div>
        </div>
        <div class="text-center mt-5">

          <button class="btn btn-major" type="submit">新增支出</button>
        </div>

      </div>
    </div>
</form>