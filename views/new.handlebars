<form action="/records" method="POST">
  <div class="container">
    <div class="form-group row" style="color:dimgray;">
      <div class="col-12 col-lg-6 mx-auto">
        <div class="row mb-3">
          <p class="col-sm-2 col-form-label text-center" style="font-size: x-small;height: 50px; line-height: 50px;">
            *必填欄位</p>
          <p class="col-sm-10 col-form-label text-center" style="height: 50px; line-height: 50px;">請輸入你的支出</p>
        </div>
        <div class="row mb-4">
          <label for="name" class="col-sm-2 col-form-label">名稱*：</label>
          <div class="col-sm-10">
            <input name="name" type="text" class="form-control rounded-0" id="name" placeholder="" required>
          </div>
        </div>
        <div class="row mb-4">
          <label for="date" class="col-sm-2 col-form-label">日期*：</label>
          <div class="col-sm-10">
            <input name="date" type="date" class="form-control rounded-0" id="date" placeholder="" required>
          </div>
        </div>
        <div class="row mb-4">
          <label for="category" class="col-sm-2 col-form-label">類別*：</label>
          <div class="col-sm-10">
            <select name="category" class="form-select rounded-0 " id="category" required>
              <option value="家居物業">家居物業</option>
              <option value="交通出行">交通出行</option>
              <option value="休閒娛樂">休閒娛樂</option>
              <option value="餐飲食品">餐飲食品</option>
              <option value="其他">其他</option>
            </select>
          </div>
        </div>
        <div class="row mb-4">
          <label for="amount" class="col-sm-2 col-form-label">金額*：</label>
          <div class="col-sm-10">
            <input name="amount" type="number" min="0" class="form-control rounded-0 " id="amount" placeholder=""
              required>
          </div>
        </div>
        <div class="text-center mt-5">

          <button class="btn btn-dark" style="background-color: #e3885b;" type="submit">新增支出</button>
        </div>
      
      </div>
    </div>
</form>